#!/bin/bash

# To obtain fresh list
# apm list --installed --bare | sed 's/@.*$//'
#

##############################################################################

function bci() {
  pkg="$1"
  if ! brew cask list -1 | grep -q "^${pkg}\$"; then
    brew cask install "$@"
  fi
}

function aix() {
  pkg="$1"
  if ! apm ls -b -i | sed 's/@.*$//' | grep -q "^${pkg}\$"; then
    apm install "$@"
  fi
}

aix Sublime-Style-Column-Selection
aix atom-alignment
